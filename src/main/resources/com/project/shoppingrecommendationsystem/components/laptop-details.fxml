<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fitToWidth="true"
            fx:controller="com.project.shoppingrecommendationsystem.controllers.LaptopDetailsController">
    <VBox spacing="25" style="-fx-padding: 20;">
        <HBox spacing="30">
            <VBox fx:id="productCardDetailsBox" spacing="10" style="-fx-pref-width: 300;">
            </VBox>
            <VBox spacing="15" style="-fx-pref-width: 500;">
                <Label text="Description" styleClass="section-header"/>
                <Label fx:id="descriptionText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
            </VBox>
        </HBox>

        <VBox spacing="20">
            <VBox spacing="10">
                <Label text="Processor" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="cpuNameRow" spacing="15">
                        <Label text="Name:" styleClass="detail-label"/>
                        <Label fx:id="cpuNameText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="cpuBaseFrequencyRow" spacing="15">
                        <Label text="Base Frequency:" styleClass="detail-label"/>
                        <Label fx:id="cpuBaseFrequencyText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="cpuTurboFrequencyRow" spacing="15">
                        <Label text="Turbo Frequency:" styleClass="detail-label"/>
                        <Label fx:id="cpuTurboFrequencyText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="cpuCoresRow" spacing="15">
                        <Label text="Cores:" styleClass="detail-label"/>
                        <Label fx:id="cpuCoresText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="cpuThreadsRow" spacing="15">
                        <Label text="Threads:" styleClass="detail-label"/>
                        <Label fx:id="cpuThreadsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="cpuCacheRow" spacing="15">
                        <Label text="Cache:" styleClass="detail-label"/>
                        <Label fx:id="cpuCacheText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Memory" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="ramSizeRow" spacing="15">
                        <Label text="Size:" styleClass="detail-label"/>
                        <Label fx:id="ramSizeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="ramTypeRow" spacing="15">
                        <Label text="Type:" styleClass="detail-label"/>
                        <Label fx:id="ramTypeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="ramChannelsRow" spacing="15">
                        <Label text="Channels:" styleClass="detail-label"/>
                        <Label fx:id="ramChannelsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="ramClockRow" spacing="15">
                        <Label text="Clock Speed:" styleClass="detail-label"/>
                        <Label fx:id="ramClockText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="ramUpgradableRow" spacing="15">
                        <Label text="Upgradable:" styleClass="detail-label"/>
                        <Label fx:id="ramUpgradableText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="ramSlotsRow" spacing="15">
                        <Label text="Slots:" styleClass="detail-label"/>
                        <Label fx:id="ramSlotsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="ramMaxSizeRow" spacing="15">
                        <Label text="Max Capacity:" styleClass="detail-label"/>
                        <Label fx:id="ramMaxSizeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Storage" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="storageSizeRow" spacing="15">
                        <Label text="Size:" styleClass="detail-label"/>
                        <Label fx:id="storageSizeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="storageBusRow" spacing="15">
                        <Label text="Bus Interface:" styleClass="detail-label"/>
                        <Label fx:id="storageBusText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="storageTypeRow" spacing="15">
                        <Label text="Type:" styleClass="detail-label"/>
                        <Label fx:id="storageTypeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="storageChannelsRow" spacing="15">
                        <Label text="Channels:" styleClass="detail-label"/>
                        <Label fx:id="storageChannelsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="storageUpgradableRow" spacing="15">
                        <Label text="Upgradable:" styleClass="detail-label"/>
                        <Label fx:id="storageUpgradableText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="storageSlotsRow" spacing="15">
                        <Label text="Slots:" styleClass="detail-label"/>
                        <Label fx:id="storageSlotsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Display" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="displayScreenSizeRow" spacing="15">
                        <Label text="Screen Size:" styleClass="detail-label"/>
                        <Label fx:id="displayScreenSizeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="displayScreenResolutionRow" spacing="15">
                        <Label text="Resolution:" styleClass="detail-label"/>
                        <Label fx:id="displayScreenResolutionText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="displayRefreshRateRow" spacing="15">
                        <Label text="Refresh Rate:" styleClass="detail-label"/>
                        <Label fx:id="displayRefreshRateText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="displayGPUNameRow" spacing="15">
                        <Label text="GPU Name:" styleClass="detail-label"/>
                        <Label fx:id="displayGPUNameText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="displayGPUTypeRow" spacing="15">
                        <Label text="GPU Type:" styleClass="detail-label"/>
                        <Label fx:id="displayGPUTypeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="displayGPUBaseClockRow" spacing="15">
                        <Label text="Base Clock:" styleClass="detail-label"/>
                        <Label fx:id="displayGPUBaseClockText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="displayGPUBoostClockRow" spacing="15">
                        <Label text="Boost Clock:" styleClass="detail-label"/>
                        <Label fx:id="displayGPUBoostClockText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Connectivity" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="connectivityPortsRow" spacing="15">
                        <Label text="Ports:" styleClass="detail-label"/>
                        <Label fx:id="connectivityPortsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="connectivityWifiRow" spacing="15">
                        <Label text="Wi-Fi:" styleClass="detail-label"/>
                        <Label fx:id="connectivityWifiText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="connectivityBluetoothRow" spacing="15">
                        <Label text="Bluetooth:" styleClass="detail-label"/>
                        <Label fx:id="connectivityBluetoothText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="connectivityFingerprintRow" spacing="15">
                        <Label text="Fingerprint Sensor:" styleClass="detail-label"/>
                        <Label fx:id="connectivityFingerprintText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="connectivityWebcamRow" spacing="15">
                        <Label text="Webcam:" styleClass="detail-label"/>
                        <Label fx:id="connectivityWebcamText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Battery" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="batteryCapacityRow" spacing="15">
                        <Label text="Capacity:" styleClass="detail-label"/>
                        <Label fx:id="batteryCapacityText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="batteryFullChargingTimeRow" spacing="15">
                        <Label text="Charge Time:" styleClass="detail-label"/>
                        <Label fx:id="batteryFullChargingTimeText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="batteryChargePowerRow" spacing="15">
                        <Label text="Charge Power:" styleClass="detail-label"/>
                        <Label fx:id="batteryChargePowerText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="10">
                <Label text="LaptopCase" styleClass="section-header"/>
                <VBox spacing="8" style="-fx-border-color: black; -fx-border-width: 1; -fx-padding: 10;">
                    <HBox fx:id="laptopCaseWeightRow" spacing="15">
                        <Label text="Weight:" styleClass="detail-label"/>
                        <Label fx:id="laptopCaseWeightText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="laptopCaseDimensionsRow" spacing="15">
                        <Label text="Dimensions:" styleClass="detail-label"/>
                        <Label fx:id="laptopCaseDimensionsText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                    <HBox fx:id="laptopCaseMaterialRow" spacing="15">
                        <Label text="Material:" styleClass="detail-label"/>
                        <Label fx:id="laptopCaseMaterialText" wrapText="true" styleClass="detail-content" maxWidth="500"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </VBox>
</ScrollPane>

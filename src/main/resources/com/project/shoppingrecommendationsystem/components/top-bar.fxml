<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox spacing ="20" prefHeight="77" prefWidth="1536" style="-fx-alignment: center;" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.project.shoppingrecommendationsystem.controllers.TopBarController">

    <ImageView fx:id="logo" fitHeight="52" fitWidth="116" pickOnBounds="true" preserveRatio="true" />

    <Label fx:id="titleLabel" prefHeight="78" prefWidth="365" styleClass="title" stylesheets="@../styling.css"
           text="Shopping Recommended System">
        <font>
            <Font size="22" />
        </font>
    </Label>

    <TextField fx:id="searchTextField" prefHeight="40" prefWidth="525" promptText="What product you have in mind today"
               styleClass="search-field" stylesheets="@../styling.css" />

    <Button fx:id="searchButton" text="🔍" styleClass="search-btn" stylesheets="@../styling.css" />

    <Button fx:id="goToList" text="My list"/>

</HBox>

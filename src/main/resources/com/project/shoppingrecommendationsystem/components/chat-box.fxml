<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" spacing="10"
      fx:controller="com.project.shoppingrecommendationsystem.controllers.ChatBoxController">

    <ListView fx:id="chatListView" prefHeight="555" prefWidth="302" />
    <HBox prefHeight="100" prefWidth="200">
        <TextField fx:id="chatInput" prefHeight="91" prefWidth="236" onAction="#sendMessage"/>
        <Button fx:id="sendButton" prefHeight="53" prefWidth="66" text="Send" onAction="#sendMessage"/>
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" spacing="10">

    <!-- Chat Container -->
    <VBox fx:id="chatContainer" prefWidth="302" prefHeight="720"
          style="-fx-background-color: white; -fx-border-color: black; -fx-padding: 10;"
          visible="false">

        <!-- Chat List -->
        <ListView fx:id="chatListView" prefWidth="302" prefHeight="555" />

        <!-- Input Area -->
        <HBox prefWidth="200" prefHeight="100">
            <TextField fx:id="chatInput" prefWidth="236" prefHeight="91" />
            <Button fx:id="sendButton" text="Send" prefWidth="66" prefHeight="53"/>
        </HBox>
    </VBox>

    <!-- Chat Toggle Button -->
    <Button fx:id="chatToggleButton" style="-fx-background-color: transparent; -fx-padding: 0;">
        <graphic>
            <Circle radius="31" fill="DODGERBLUE" stroke="BLACK" />
        </graphic>
    </Button>
</VBox>

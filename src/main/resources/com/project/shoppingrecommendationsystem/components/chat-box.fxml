<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml" spacing="10">

    <VBox fx:id="chatContainer" prefHeight="720" prefWidth="302" style="-fx-background-color: white; -fx-border-color: black; -fx-padding: 10;" visible="false">

        <ListView fx:id="chatListView" prefHeight="555" prefWidth="302" />

        <HBox prefHeight="100" prefWidth="200">
            <TextField fx:id="chatInput" prefHeight="91" prefWidth="236" />
            <Button fx:id="sendButton" prefHeight="53" prefWidth="66" text="Send" />
        </HBox>
    </VBox>
</VBox>
